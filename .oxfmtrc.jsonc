{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "ignorePatterns": [
    "node_modules",
    "dist",
    ".git",
    ".jj",
    "**/*.css",
    "**/*.json",
    "**/*.jsonc",
    "**/*.md",
    "**/*.toml",
    "**/*.yml"
  ],
  "printWidth": 80, // like biome
  "useTabs": false,
  "tabWidth": 2,
  "semi": false,
  "singleQuote": false,
  "trailingComma": "all",
  "bracketSpacing": true,
  "arrowParens": "always"
}
